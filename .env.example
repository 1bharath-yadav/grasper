# Grasper AI Data Analysis API - Environment Variables Template
# Copy this file to .env and add your actual API keys

# Google Gemini API Configuration (Required)
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp

# OpenAI API Configuration (Optional, for fallback)
OPENAI_API_KEY=your_openai_api_key_here

# Logfire Configuration (Optional, for production monitoring)
LOGFIRE_TOKEN=your_logfire_token_here

# Environment Settings
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Data Processing Settings
MAX_FILE_SIZE_MB=100
MAX_CONCURRENT_TASKS=10
TASK_TIMEOUT_SECONDS=300

# Logging Settings
LOG_LEVEL=INFO

# File Upload Settings
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=104857600

# Workflow Engine Settings
MAX_RETRY_ATTEMPTS=5
RETRY_DELAY_SECONDS=1
EXECUTION_TIMEOUT=30

# Development Settings
DEBUG=true
RELOAD_ON_CHANGE=true
